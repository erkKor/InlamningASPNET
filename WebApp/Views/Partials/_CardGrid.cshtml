@model CardGridVM

@if (Model.Categories != null)
{
    <div class="category-choices">
        @foreach (var category in Model.Categories)
        {
            <a href="">@category</a>
        }
    </div>
}

@if (Model.GridItems != null)
{
    <div class="_card-grid">
    @foreach (var item in Model.GridItems)
    {
        <partial name="/Views/Partials/_CardGridItem.cshtml" model="item" />
    }
    </div>
}
       
