@model CardGridItemVM

<a asp-controller="products" asp-action="details" asp-route-id="@Model.Id" class="_card">
    <img src="@Model.ImageUrl" >
    <div class="_card-content">
        <p>@Model.Name</p>
        <div class="price">
            <p class="discount-price">$@Model.Price</p>
            <p class="original-price">$50.00</p>
        </div>
    </div>
    <div>
        <button class="add-cart">
            <i class="fa-regular fa-cart-plus"></i>
        </button>
    </div>
</a>