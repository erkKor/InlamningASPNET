@model LoginVM
@{
	ViewData["Title"] = "Login";
}
<partial name="/Views/Partials/_Header.cshtml" />

<section class="login-form">
    <div class="container">
        <div class="title">Login to Your Account</div>
        <form method="post" novalidate asp-route-ReturnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="email form-group">
                <label asp-for="Email">E-mail*
                    <a asp-action="Index" asp-controller="Register" class="register-link">Don't have an account yet?</a>
                </label>
                <input asp-for="Email">
                <small><span asp-validation-for="Email"></span></small>
            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password">
                <small><span asp-validation-for="Password"></span></small>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="RememberMe"></label>
                   <input asp-for="RememberMe" class="custom-checkbox" />
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="button-theme">Submit</button>
        </form>
    </div>
    <partial name="/Views/Partials/_Footer.cshtml" />
</section>

